<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.drugaparcijala.controllers.IzmjenaNekretnineController"
          alignment="CENTER" hgap="10" vgap="10" padding="10">

    <Label text="Jedinstveni broj:" />
    <TextField fx:id="jedinstveniBrojTextField" />

    <Label text="Adresa:" />
    <TextField fx:id="adresaTextField" />

    <Label text="Grad:" />
    <TextField fx:id="gradTextField" />

    <Label text="Cijena:" />
    <TextField fx:id="cijenaTextField" />

    <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="4">
        <Button text="Spremi izmjene" onAction="#spremiIzmjene" />
        <Button text="Zatvori" onAction="#zatvoriProzor" />
    </HBox>

</GridPane>